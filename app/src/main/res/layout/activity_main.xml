<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_padding"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding"
    android:paddingTop="@dimen/layout_padding">

    <Button
        android:id="@+id/walking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/walking" />

    <Button
        android:id="@+id/stairs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STAIRS" />

    <Button
        android:id="@+id/bicycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bicycle" />

    <Button
        android:id="@+id/get_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="requestUpdatesHandler"
        android:text="@string/track" />

    <Button
        android:id="@+id/setSampling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setSamplingInterval"
        android:text="Sampling Period" />

    <TextView
        android:id="@+id/sampling"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:text="Sampling Interval" />

    <ListView
        android:id="@+id/activities_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>




